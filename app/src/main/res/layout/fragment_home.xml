<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTransparent2"
        android:visibility="gone"></View>

    <com.tetstudio.ilockscreen.utils.iOSTextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="09:00"
        android:textColor="@android:color/white"
        android:textSize="60sp" />

    <com.tetstudio.ilockscreen.utils.iOSTextView
        android:id="@+id/time_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/time_text"
        android:text="AM"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="gone" />

    <com.tetstudio.ilockscreen.utils.iOSTextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Example"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/list_notification"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/date_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        android:overScrollMode="never"></ListView>

    <com.tetstudio.ilockscreen.utils.iOSTextView
        android:id="@+id/clear_all_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_notification"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/clear_all"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/slide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Slide to unlock"
        android:textColor="#444"
        android:textSize="28sp" />

</RelativeLayout>